<%- include('../partials/header.ejs') %>

<div class="deletion-container">
  <div class="deletion-card">
    <div class="deletion-icon success">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="#4BB543" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <h1 class="deletion-title">Post Deleted</h1>
    <p class="deletion-message">Your post has been successfully removed from the platform.</p>
    <div class="deletion-actions">
      <a href="/posts/all" class="deletion-button">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Back to All Posts
      </a>
    </div>
  </div>
</div>

<style>
  .deletion-container {
    max-width: 500px;
    margin: 3rem auto;
    padding: 0 1.5rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .deletion-card {
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    padding: 2.5rem;
    text-align: center;
  }

  .deletion-icon {
    margin: 0 auto 1.5rem;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .deletion-icon.success {
    background-color: #f0fdf4;
    border: 2px solid #bbf7d0;
  }

  .deletion-title {
    color: #222;
    font-size: 1.8rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .deletion-message {
    color: #666;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .deletion-actions {
    display: flex;
    justify-content: center;
  }

  .deletion-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: #3399ff;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .deletion-button:hover {
    background-color: #1c6ed0;
    transform: translateY(-2px);
  }

  .deletion-button svg {
    transition: transform 0.3s ease;
  }

  .deletion-button:hover svg {
    transform: translateX(-3px);
  }

  @media (max-width: 600px) {
    .deletion-container {
      padding: 0 1rem;
    }
    
    .deletion-card {
      padding: 2rem 1.5rem;
    }
    
    .deletion-icon {
      width: 64px;
      height: 64px;
    }
    
    .deletion-title {
      font-size: 1.5rem;
    }
    
    .deletion-message {
      font-size: 1rem;
    }
  }
</style>

<%- include('../partials/footer.ejs') %>