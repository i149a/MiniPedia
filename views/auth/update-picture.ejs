<%- include('../partials/header.ejs') %>

<div class="update-picture-container">
  <h2>Update Profile Picture for <%= user.username %></h2>

  <!-- Current Picture Display -->
  <div class="current-picture-wrapper">
    <img src="<%= user.picture %>" alt="Current Profile Picture" class="current-picture" />
  </div>

  <form action="/auth/<%= user._id %>/update-picture" method="POST" class="update-picture-form" novalidate>
    <label for="picture">New Picture URL:</label>
    <input
      type="url"
      name="picture"
      id="picture"
      placeholder="Enter new profile picture URL"
      value=""
      required
      autocomplete="off"
    />
    <button type="submit" class="btn">Update Picture</button>
  </form>

    <a href="/users/<%= user._id %>" class="btn-return">‚Üê Back to Profile</a>
</div>
<style>
  .update-picture-container {
    max-width: 420px;
    margin: 3rem auto;
    padding: 2rem 2.5rem;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #222;
  }

  .update-picture-container h2 {
    text-align: center;
    font-weight: 700;
    font-size: 1.8rem;
    margin-bottom: 2rem;
    letter-spacing: 0.03em;
    color: #111;
  }

  .current-picture-wrapper {
    text-align: center;
    margin-bottom: 1.8rem;
  }

  .current-picture {
    width: 140px;
    height: 140px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #3399ff;
    box-shadow: 0 0 12px rgba(51, 153, 255, 0.4);
  }

  .update-picture-form label {
    display: block;
    margin-bottom: 0.6rem;
    font-weight: 600;
    color: #555;
    letter-spacing: 0.02em;
  }

  .update-picture-form input[type="url"] {
    width: 100%;
    padding: 0.65rem 1rem;
    font-size: 1.1rem;
    border: 2px solid #ccc;
    border-radius: 8px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    color: #333;
    font-weight: 500;
    box-sizing: border-box;
  }

  .update-picture-form input[type="url"]:focus {
    border-color: #3399ff;
    box-shadow: 0 0 8px rgba(51, 153, 255, 0.4);
    outline: none;
  }

  .btn {
    display: block;
    width: 100%;
    padding: 0.75rem 0;
    margin-top: 1.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    background: linear-gradient(135deg, #3399ff, #1c6ed0);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    box-shadow: 0 5px 12px rgba(51, 153, 255, 0.35);
    transition: background 0.3s ease, box-shadow 0.3s ease;
  }

  .btn:hover {
    background: linear-gradient(135deg, #1c6ed0, #1362b1);
    box-shadow: 0 7px 20px rgba(28, 110, 208, 0.6);
  }

  .btn-return {
    display: block;
    text-align: center;
    margin-top: 1.8rem;
    font-weight: 600;
    color: #3399ff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .btn-return:hover {
    color: #1c6ed0;
  }
</style>

<%- include('../partials/footer.ejs') %>
