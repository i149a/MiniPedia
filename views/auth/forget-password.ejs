<div class="update-password-container">
  <h2>Reset Your Password</h2>

  <form action="/auth/forget-password" method="POST" class="update-password-form" novalidate>
    <div class="form-group">
      <label for="email">Email Address:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter your registered email"
        value="<%= typeof email !== 'undefined' ? email : '' %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="newPassword">New Password:</label>
      <input
        type="password"
        id="newPassword"
        name="newPassword"
        placeholder="New password (8+ chars, upper, lower, number)"
        title="Must be 8+ chars, include uppercase, lowercase, and a number"
        required
      />
    </div>

    <div class="form-group">
      <label for="confirmPassword">Confirm New Password:</label>
      <input
        type="password"
        id="confirmPassword"
        name="confirmPassword"
        placeholder="Confirm new password"
        required
      />
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="error-message"><%= error %></div>
    <% } %>

    <button type="submit">Reset Password</button>
  </form>

  <a href="/" class="btn-return">‚Üê Back to Sign In</a>
</div>

<style>
  .update-password-container {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem 2.5rem;
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #222;
    box-sizing: border-box;
  }

  .update-password-container h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #222;
  }

  .update-password-form {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
  }

  .update-password-form .form-group {
    width: 100%;
    margin-bottom: 1.2rem;
    box-sizing: border-box;
  }

  .update-password-form label {
    width: 100%;
    display: block;
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: #444;
    box-sizing: border-box;
  }

  .update-password-form input[type="password"],
  .update-password-form input[type="email"] {
    width: 100%;
    padding: 0.6rem 0.75rem;
    border: 1px solid #bbb;
    border-radius: 6px;
    font-size: 1rem;
    color: #333;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box;
  }

  .update-password-form input:focus {
    outline: none;
    border-color: #3399ff;
    box-shadow: 0 0 6px #3399ff;
  }

  input:invalid {
    box-shadow: none;
    border-color: #bbb;
  }

  .error-message {
    background-color: #fee2e2;
    border: 1px solid #fca5a5;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    color: #b91c1c;
    margin-bottom: 1.2rem;
    font-weight: 600;
    text-align: center;
    box-sizing: border-box;
  }

  .update-password-form button {
    width: 100%;
    padding: 0.75rem;
    background-color: #3399ff;
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-sizing: border-box;
  }

  .update-password-form button:hover {
    background-color: #1c6ed0;
  }

  .btn-return {
    display: block;
    text-align: center;
    margin-top: 1.8rem;
    font-weight: 600;
    color: #3399ff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .btn-return:hover {
    color: #1c6ed0;
  }
</style>

